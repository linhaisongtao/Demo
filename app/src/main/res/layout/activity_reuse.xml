<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/mButtonShowFirstVisiblePosition"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="text"
        android:text="ShowFirstVisiblePosition"/>

    <ScrollView
        android:id="@+id/mScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.baitian.daisongsong.demo.module.reuse.ReuseLayout
            android:id="@+id/mReuseLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"></com.baitian.daisongsong.demo.module.reuse.ReuseLayout>
    </ScrollView>
</LinearLayout>