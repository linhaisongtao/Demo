<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"/>

    <com.baitian.daisongsong.demo.widgets.MyCustomView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0c"
        android:padding="10dp"/>

    <com.baitian.daisongsong.demo.widgets.MyLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#f0c"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mTextViewTest"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="test"/>

        <com.baitian.daisongsong.demo.widgets.MyTouchEventView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#0fc"/>


    </com.baitian.daisongsong.demo.widgets.MyLayout>

    <TextView
        android:id="@+id/mTextViewMessenger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="通过Messenger交互"/>

    <Button
        android:id="@+id/mButtonShowFloatView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="显示悬浮窗"/>

    <Button
        android:id="@+id/mButtonMain"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:inputType="text"
        android:text="MainActivity"/>

</LinearLayout>
